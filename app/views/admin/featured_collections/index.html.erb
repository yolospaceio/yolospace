<div class="main-content">
  <div class="page-content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="page-title-box d-flex align-items-center justify-content-between">
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-6">
                  <h4 class="card-title"><%= t("admin.featured_collections.index.title") %></h4>
                </div>
                <div class="col-sm-2"></div>
                <div class="col-sm-4">
                  <%= link_to t("admin.featured_collections.index.add_new"), new_admin_featured_collection_path, class: "float-right" %>
                </div>
              </div>
              <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                  <tr>
                    <!-- <th><%#= t("admin.featured_collections.index.id") %></th> -->
                    <th><%= t("admin.featured_collections.index.name") %></th>
                    <th><%= t("admin.featured_collections.index.address") %></th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% is_fcollection_empty = true %>
                  <% if @featured_collections.present? %>
                    <% @featured_collections.each do |fcollection| %>
                      <% next if fcollection.collection.nil? %>
                      <% is_fcollection_empty = false %>
                      <tr>
                        <!-- <td><%#= fcollection.id %></td> -->
                        <td><%= fcollection.collection.name %></td>
                        <td><%= fcollection.collection.address %></td>
                        <td>
                          <%= link_to "Destroy", admin_featured_collection_path(fcollection), method: :delete, class: "pr-2" %>
                        </td>
                      </tr>
                    <% end %>
                  <%end%>  
                  <% if(is_fcollection_empty) %>
                    <tr>
                      <td colspan="4"><%= t(:no_records, scope: :admin) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="flickr_pagination">
            <%= will_paginate @featured_collections %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
