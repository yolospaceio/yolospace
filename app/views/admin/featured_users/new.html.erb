<div class="main-content">
  <div class="page-content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="card">
          <%= form_tag(admin_featured_users_path, method: :post, remote: true, multipart: true) do %>
          <div class="card-body">
            <h4 class="card-title"><%= t('admin.featured_users.form.title') %></h4>

            <div class="form-group row">
              <label for="example-text-input" data-count="<%= 5 - @featured_users.count %>" class="col-md-2 users-total-count col-form-label">Only Left <%= 5 - @featured_users.count %></label>
            </div>

            <div class="form-group row">
              <label for="example-text-input" class="col-md-2 col-form-label"><%= t("admin.featured_users.form.search_user") %></label>
              <div class="col-md-8">
                <%= text_field_tag 'user_id', nil, class: 'form-control input-custom', placeholder: t('admin.featured_users.form.search_user_label') %>
              </div>
              <div class="col-md-2">
                <a class="btn btn-primary show-selected-user"><%= t('shared.add')%></a>
              </div>
            </div>
            <%= hidden_field_tag 'featured_user[user_id]', nil, class: 'form-control custom-user-id-input' %>

            <div class="row featured-users-list">
            </div>

            <div class="form-group row">
              <label for="example-number-input" class="col-md-2 col-form-label"></label>
              <div class="col-md-10">
                <button type="submit" class="btn btn-primary mr-1 w-md"><%= t('shared.submit')%></button>
                <%= link_to t('shared.cancel'), admin_featured_users_path, class: "btn btn-secondary w-md add_btn" %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
