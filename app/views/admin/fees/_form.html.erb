<div class="card-body">
  <h4 class="card-title"><%= title %></h4>

  <div class="form-group row">
    <label for="example-text-input" class="col-md-2 col-form-label"><%= t("admin.fees.form.name") %></label>
    <div class="col-md-10">
      <%= text_field_tag 'fee[name]', @fee.name, class: 'form-control input-custom', placeholder: t('admin.fees.form.name'), required: true %>
    </div>
  </div>
   <div class="form-group row">
    <label for="example-text-input" class="col-md-2 col-form-label"><%= t("admin.fees.form.fee_type") %></label>
    <div class="col-md-10">
      <%= text_field_tag 'fee[fee_type]', @fee.fee_type, class: 'form-control input-custom', placeholder: t('admin.fees.form.fee_type'), required: true %>
    </div>
  </div>

   <!--<div class="form-group row">-->
    <!--<label for="example-text-input" class="col-md-2 col-form-label"><%= t("admin.fees.form.price") %></label>-->
    <!--<div class="col-md-10">-->
      <!--<%= text_field_tag 'fee[price]', @fee.price, class: 'form-control input-custom', placeholder: t('admin.fees.form.price'), required: true %>-->
    <!--</div>-->
  <!--</div>-->

   <div class="form-group row">
    <label for="example-text-input" class="col-md-2 col-form-label"><%= t("admin.fees.form.percentage") %></label>
    <div class="col-md-10">
      <%= number_field_tag 'fee[percentage]', @fee.percentage, class: 'form-control input-custom', placeholder: t('admin.fees.form.percentage'), required: true, :onkeydown=>"return event.keyCode !== 69 && event.keyCode !== 189"%>
    </div>
  </div>



  <div class="form-group row">
    <label for="example-number-input" class="col-md-2 col-form-label"></label>
    <div class="col-md-10">
      <button type="button" id="fee_submit" class="btn btn-primary mr-1 w-md"><%= t("shared.submit") %></button>
      <%= link_to t("shared.cancel"), admin_fees_path, class: "btn btn-secondary w-md add_btn" %>
    </div>
  </div>
</div>
