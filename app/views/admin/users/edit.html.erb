<div class="main-content">
  <div class="page-content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="card">
          <%= form_tag(admin_user_path, method: :put, multipart: true) do %>
          <div class="card-body">
            <h4 class="card-title">Edit User</h4>
            <div class="form-group row">
              <label class="col-md-2 col-form-label"><%= t('admin.users.form.name') %></label>
              <div class="col-md-10">
                <%= text_field_tag 'user[name]', @user.name, class: 'form-control input-custom', placeholder: t('admin.users.form.name'), required: true %>
              </div>
            </div>
            <!--<div class="form-group row">
              <label for="example-email-input" class="col-md-2 col-form-label"><%#= t('admin.users.form.custom_url') %></label>
              <div class="col-md-10">
                <%#= text_field_tag 'user[custom_url]', @user.custom_url, class: 'form-control input-custom', placeholder: t('admin.users.form.custom_url'), required: true %>
              </div>
            </div>-->
            <div class="form-group row">
              <label class="col-md-2 col-form-label"><%= t('admin.users.form.bio') %></label>
              <div class="col-md-10">
                <%= text_area_tag 'user[bio]', @user.bio, class: 'form-control input-custom', placeholder: t('admin.users.form.bio'), rows: 10, required: true %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-md-2 col-form-label"><%= t('admin.users.form.twitter_link') %></label>
              <div class="col-md-10">
                <%= text_field_tag 'user[twitter_link]', @user.twitter_link, class: 'form-control input-custom', id: "twitter-username", required: true %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-md-2 col-form-label"><%= t('admin.users.form.personal_url') %></label>
              <div class="col-md-10">
                <%= text_field_tag 'user[personal_url]', @user.personal_url, class: 'form-control input-custom', id: "twitter-username", required: true %>
              </div>
            </div>
            <div class="form-group row">
              <label for="example-number-input" class="col-md-2 col-form-label"></label>
              <div class="col-md-10">
                <button type="submit" class="btn btn-primary mr-1 w-md"><%= t("shared.update")%></button>
                <%= link_to t("shared.cancel"), admin_users_path, class: "btn btn-secondary w-md add_btn" %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
