<section class="row row--grid">
  <!-- title -->
  <div class="col-12">
    <div class="main__title">
      <h2><%= t('dashboard.top_buyers')%></h2>

      <!--<a href="#" class="main__link">View all <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z"/></svg></a>-->
    </div>
  </div>
  <!-- end title -->

  <!-- sellers list -->
  <div class="col-12">
    <ul class="sellers-list">
      <% if @top_buyers.present? %>
        <% @top_buyers.each_with_index do |seller, i| %>
          <li class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="sellers-list__author sellers-list__author--verified">
              <%= image_tag seller.profile_image %>
              <span class="sellers-list__number"><%=i+1%></span>
              <%= link_to seller.full_name,user_path(id: seller.address)  %>
              <span data-toggle="tooltip" data-placement="top" title="<%#= seller.total_sell %>"><%#= seller.total_sell %></span>
            </div>
          </li>
        <% end %>
      <% else %>
        <% 4.times do %>
          <%= render partial: 'common/empty_topbuyers' %>
        <% end %>
      <% end %>
    </ul>
  </div>
  <!-- end sellers list -->
</section>
